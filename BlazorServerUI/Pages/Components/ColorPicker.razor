@namespace BlazorServerUI.Pages.Components

<input type="color" id="color-picker" value="@ColorValue" @onchange="@OnChange"/>

@code {

    [Parameter]
    public EventCallback<string> OnColorChange { get; set; }
    
    [Parameter]
    public string ColorValue { get; set; } = "#ffffff";

    private Task OnChange(ChangeEventArgs arg)
    {
        ColorValue = arg.Value!.ToString()!;
        OnColorChange.InvokeAsync(ColorValue);
        return Task.CompletedTask;
    }

}